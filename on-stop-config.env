# Configuration file for on-stop scripts
# Customize these values based on your needs

# Logging configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARN, ERROR
LOG_RETENTION_DAYS=7

# Git repository configuration
GIT_REPO_PATH="src/server/shallow"
GIT_AUTO_UNSHALLOW=true
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true

# Authentication configuration
AUTH_RETRY_COUNT=3
AUTH_TIMEOUT=30

# File operations
CREATE_RANDOM_FILES=true
RANDOM_FILE_SOURCE="test2.py"

# Cleanup configuration
CLEANUP_TEMP_FILES=true
CLEANUP_OLD_LOGS=true

# Notification configuration (future enhancement)
SLACK_WEBHOOK_URL=""
EMAIL_NOTIFICATIONS=false

# Debug mode
DEBUG_MODE=false
VERBOSE_LOGGING=true